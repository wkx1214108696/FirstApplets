.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
  /* 使用flex垂直居中 */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-author {
  height: 60rpx;
  width: 60rpx;
  /* vertical-align: middle; */
}

.post-date {
  margin-left: 20rpx;
  /* vertical-align: middle; */
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: bold;
  /* 希望在任何机型上都是20px，则使用px为单位，注意是二倍的关系 */
  margin-left: 10px;
  margin-bottom: 10px;
  color: #333;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 10px;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin: 0 20rpx 20rpx 20rpx;
}

.post-like {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.post-like-image {
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}

.post-like-font {
  margin-right: 40rpx;
}
