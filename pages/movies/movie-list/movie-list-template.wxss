/* 引入模板wxss */
@import "../movie/movie-template.wxss";

.movie-list-container {
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.movie-head {
  padding: 30rpx 20rpx 22rpx;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.movie-hot {
  font-size: 24rpx;
}

.movie-more {
  /* float: right; */
}

.movie-more text {
  margin-right: 10rpx;
  color: #1f4ba5;
}

.movie-more image {
  width: 6px;
  height: 26rpx;
  vertical-align: middle;
}

.movies-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}