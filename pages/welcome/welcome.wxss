page {
  background-color: #b3d4db;
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-img, .user-container {
  width: 200rpx;
  height: 200rpx;
}

.user-container {
  margin-top: 160rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.moto {
  font-size: 22rpx;
  font-weight: bold;
  color: #405f80;
}

.moto-container {
  margin-top: 200rpx;
  border: 1px solid #405f80;
  height: 80rpx;
  width: 200rpx;
  border-radius: 5px;
  text-align: center;
  line-height: 80rpx;
}

